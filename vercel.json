{
  "functions": {
    "api/checkout.ts": {
      "runtime": "nodejs20.x"
    }
  },
  
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]


}
