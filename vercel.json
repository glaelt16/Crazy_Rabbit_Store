{
  "version": 2,
  "builds": [
    {
      "src": "express-api/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apparel-store/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/express-api/src/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "^/([^.]*)$",
      "dest": "/index.html"
    }
  ]
}
